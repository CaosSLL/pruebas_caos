{% block body %}
<h1>Bienvenido: {{ usuario.username }}!</h1>

<div class="listado_partidas">
    <ul>
    {% for partida in partidas %}
        {% if partida.usuario.getId == usuario.getId %}
        <li>
            <div class="partida">
                <span>{{ partida.partida.getFecha|date("j - F - Y") }}</span>
                <div class="usuarios" id="usuarios{{partida.partida.getId}}">
                    <h3>Usuarios de la partida:</h3>
                    <table class="listaUsuarios">
                        <thead>
                            <tr>
                                <th>Usuario</th>
                                <th>Personaje</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for usu in partidas %}
                            {% if usu.partida.getId == partida.getPartida.getId %}
                            <tr>
                                <td>{{ usu.usuario.getUsername }}</td>
                                <td>{{ usu.jugador.getPersonaje }}</td>
                            </tr>
                            {% endif %}
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </li>
        {% endif %}
    {% endfor %}
    </ul>
</div>

